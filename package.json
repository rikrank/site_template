{
  "name": "site_template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist",
    "clean:img": "rimraf ./dist/assets/img",
    "clean:html": "rimraf ./dist/**/*.html",
    "copy": "cpx './src/**/*.{css,js,pdf}' './dist'",
    "checkTypes": "tsc --noEmit --skipLibCheck",
    "lint": "npm-run-all -p eslint stylelint checkTypes htmlValidate",
    "lint:fix": "npm-run-all eslint:fix stylelint:fix format",
    "eslint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --config .config/.eslintrc.json",
    "eslint:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}' --config .config/.eslintrc.json",
    "stylelint": "stylelint 'src/**/*.{css,scss}' --config .config/.stylelintrc.json",
    "stylelint:fix": "stylelint 'src/**/*.{css,scss}' --fix --config .config/.stylelintrc.json",
    "htmlValidate": "html-validate 'dist/**/*.html' --config .config/.htmlvalidate.json",
    "format": "prettier --write --plugin-search-dir=. 'src/**/*.{js,ts,tsx}' --config .config/.prettierrc",
    "postCss": "postcss ./dist/**/*.css --replace ./dist/**/*.css --config .config/.postcssrc.js",
    "postCss:watch": "postcss ./dist/**/*.css --base ./dist/ --dir ./dist/ --watch --config .config/.postcssrc.js",
    "postInstall": "typesync",
    "svgsprite": "svg-sprite -C .config/svgconfig.json â€”shape-transform-svgo .config/svgo.json src/assets/icon/*svg",
    "imagemin": "node .config/imagemin.mjs",
    "imagemin:build": "npm-run-all -s imagemin svgsprite",
    "imagemin:w": "onchange src/assets/img/ -- npm-run-all -s clean:img imagemin svgsprite",
    "pug": "pug src/pug/ --pretty --out dist/",
    "pug:w": "onchange ./src/pug/ -- npm-run-all -s clean:html pug",
    "sass:watch": "sass ./src/assets/scss:dist/assets/css/ --watch",
    "sass:dev": "sass ./src/assets/scss:dist/assets/css/ --no-unicode",
    "sass:prd": "sass ./src/assets/scss:dist/assets/css/ --no-source-map --no-unicode",
    "webpack:watch": "cross-env NODE_ENV=development webpack --config .config/webpack.config.js --watch",
    "webpack:dev": "cross-env NODE_ENV=development webpack --config .config/webpack.config.js",
    "webpack:prd": "cross-env NODE_ENV=production webpack --config .config/webpack.config.js",
    "start": "npm-run-all -p start:*",
    "start:pug": "npm-run-all -p pug pug:w",
    "start:image": "npm-run-all -p imagemin:*",
    "start:sass": "npm-run-all -p sass:watch postCss:watch",
    "start:webpack": "npm-run-all webpack:watch",
    "start:serve": "browser-sync start --config .config/bs-config.js",
    "build": "npm-run-all clean -p build:* copy imagemin svgsprite",
    "build:pug": "NODE_ENV=development npm-run-all pug",
    "build:image": "NODE_ENV=development npm-run-all imagemin:build",
    "build:sass": "NODE_ENV=development npm-run-all sass:dev postCss",
    "build:webpack": "npm-run-all webpack:dev",
    "release": "npm-run-all clean -p release:* copy imagemin svgsprite",
    "release:pug": "NODE_ENV=production npm-run-all pug",
    "release:image": "NODE_ENV=production npm-run-all imagemin:build",
    "release:sass": "NODE_ENV=production npm-run-all sass:prd postCss",
    "release:webpack": "npm-run-all webpack:prd"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.20.0",
    "@types/cpx": "^1.5.2",
    "@types/eslint": "^8.4.6",
    "@types/html-minifier": "^4.0.2",
    "@types/imagemin": "^8.0.0",
    "@types/imagemin-gifsicle": "^7.0.1",
    "@types/imagemin-jpegtran": "^5.0.1",
    "@types/imagemin-mozjpeg": "^8.0.1",
    "@types/imagemin-pngquant": "8.0.0",
    "@types/imagemin-svgo": "9.0.0",
    "@types/imagemin-webp": "7.0.0",
    "@types/rimraf": "^3.0.2",
    "@types/smooth-scroll": "^16.1.1",
    "@types/svg-sprite": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "autoprefixer": "^10.4.8",
    "browser-sync": "^2.27.10",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.13",
    "html-minifier": "^4.0.0",
    "html-validate": "^7.3.3",
    "html-webpack-plugin": "^5.5.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "9.0.0",
    "imagemin-svgo": "9.0.0",
    "imagemin-webp": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-plugin": "^1.0.0",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "pug": "^3.0.2",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rimraf": "^3.0.2",
    "sass": "^1.54.8",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "svg-sprite": "^1.5.4",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "destyle.css": "^3.0.2",
    "smooth-scroll": "^16.1.3"
  }
}
