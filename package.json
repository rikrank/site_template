{
  "name": "site_template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./dist",
    "copy": "cpx './src/**/*.{css,js,pdf}' './dist'",
    "stylelint": "stylelint ./src/**/*.scss",
    "stylelint:fix": "stylelint --fix ./src/**/*.scss",
    "postCss": "postcss ./dist/**/*.css --replace ./dist/**/*.css --config .config/.postcssrc.js",
    "postCss:watch": "postcss ./dist/**/*.css --base ./dist/ --dir ./dist/ --watch --config .config/.postcssrc.js",
    "sass:watch": "sass ./src/assets/scss:dist/assets/css/ --watch",
    "sass:dev": "sass ./src/assets/scss:dist/assets/css/ --no-unicode",
    "sass:prd": "sass ./src/assets/scss:dist/assets/css/ --no-source-map --no-unicode",
    "start:sass": "npm-run-all -p sass:watch postCss:watch",
    "build:sass": "NODE_ENV=development npm-run-all -s sass:dev postCss",
    "release:sass": "NODE_ENV=production npm-run-all -s clean sass:prd postCss"
  },
  "devDependencies": {
    "@types/cpx": "^1.5.2",
    "@types/rimraf": "^3.0.2",
    "autoprefixer": "^10.4.8",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.13",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-plugin": "^1.0.0",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.54.8",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-prettier": "^2.0.0"
  },
  "dependencies": {
    "destyle.css": "^3.0.2"
  }
}
